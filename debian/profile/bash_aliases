alias l='ls -lh --group-directories-first'
alias ll='ls -lah --group-directories-first'
alias la='ls -la --group-directories-first'
alias h='history 50'
alias j='jobs -l'
alias cpr='cp -r'
alias df='df -H'
alias du='du -h'
alias dus='du -hs'
alias tf='tail -f'

